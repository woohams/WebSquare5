    				</xf:trigger>
    				<xf:trigger class="dmr fr" ev:onclick="scwin.btn_makeBtn_onclick" id="btn_makeBtn" style="width: 80px;height: 23px;" type="button">
    					<xf:label><![CDATA[버튼 생성]]></xf:label>
    				</xf:trigger>
    			</xf:group>
